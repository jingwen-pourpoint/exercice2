<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>Exercice2</display-name>
  <welcome-file-list>
  	<welcome-file>connection</welcome-file>
  </welcome-file-list>

	<servlet>
		<servlet-name>CreationUtilisateur</servlet-name>
		<servlet-class>servlets.CreationUtilisateur</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CreationUtilisateur</servlet-name>
		<url-pattern>/utilisateur/creation</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>CreationArticle</servlet-name>
		<servlet-class>servlets.CreationArticle</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CreationArticle</servlet-name>
		<url-pattern>/article/creation</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>Connection</servlet-name>
		<servlet-class>servlets.Connection</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Connection</servlet-name>
		<url-pattern>/connection</url-pattern>
	</servlet-mapping>


