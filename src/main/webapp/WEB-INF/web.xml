	</servlet>

	<servlet-mapping>
		<servlet-name>AffichageArticle</servlet-name>
		<url-pattern>/article/affichage</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>Deconnexion</servlet-name>
